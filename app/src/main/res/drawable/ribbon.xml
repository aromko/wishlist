<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="100dp"
                android:height="20dp" />
            <solid android:color="@color/quantum_googred400" />
            <corners android:radius="0dp"/>
        </shape>
    </item>

    <item
        android:top="-13dp"
        android:bottom="9dp"
        android:left="-45dp"
        android:right="91dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#ffffff" />
            </shape>
        </rotate>
    </item>

    <item
        android:top="9dp"
        android:bottom="-13dp"
        android:left="91dp"
        android:right="-45dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#ffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>